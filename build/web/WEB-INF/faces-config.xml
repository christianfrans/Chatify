<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <navigation-rule>
        <from-view-id>/loginUsers.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{users.validatelogin()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/indexUsers.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{users.validatelogin()}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/loginUsersError.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/loginUsersError.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{users.validatelogin()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/indexUsers.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{users.validatelogin()}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/loginUsersError.xhtml</to-view-id>
        </navigation-case>
        <redirect/>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/indexUsers.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{users.logout()}</from-action>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <redirect/>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/loginAdmin.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{admin.validatelogin()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/indexAdmin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{admin.validatelogin()}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/loginAdminError.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/indexAdmin.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{admin.logout()}</from-action>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <redirect/>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/loginCreators.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{creators.validatelogin()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/indexCreator.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{creators.validatelogin()}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/loginCreatorsError.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/indexCreator.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{creators.logout()}</from-action>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <redirect/>
    </navigation-rule>
</faces-config>
